
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>New User Registration</h2>
      </div>

      <div class="panel-body">

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <!-- Only display the option to select a role if a user is logged in. -->
        <% if current_user.present? && (can? :change_role, User) %>
          <div class="field" >
            <%= f.label :role %><br />
            <%= f.select :role, options_for_select(['admin', 'employee', 'guest'], 'guest' )%>
          </div>
        <% else %>
          <%= f.hidden_field :role, :value => 'guest' %>
        <% end %>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="panel-footer">
        <div class="actions">
          <%= link_to t(:cancel), :back, class: 'btn btn-primary' %>
          <%= f.submit "Create New User", class: 'btn btn-success'  %>
        </div>
      </div>
    </div>
<% end %>
